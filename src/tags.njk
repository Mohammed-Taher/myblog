---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
layout: base-layout.njk
---
<h1 class="font-bold text-3xl mb-5 border-b border-b-gray-200 pb-10 ">المقالات في موضوع “{{ tag }}”</h1>

<ul style="list-style-type: none">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li class="my-2"><a class="text-2xl font-bold" href="{{ post.url }}">{{ post.data.title }}</a>


  </li>

  <div class="flex flex-row items-center mb-10">
      <svg class="mb-1 ml-2 stroke-gray-600 feather feather-calendar" xmlns="http://www.w3.org/2000/svg"
          width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
          stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      <time class="text-sm leading-none text-gray-600 md:text-lg" datetime="{{ post.date | dateIso }}">{{
          post.date | dateReadable }}</time>
  </div>
{% endfor %}
</ul>
