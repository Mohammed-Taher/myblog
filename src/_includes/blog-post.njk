---
layout: base-layout.njk
---

<article class="text-xl leading-relaxed">
	<div class="mb-8">
		<div class="mb-5">
		{% for tag in tags -%}
		{% if tag !== 'post' %}
			<a class="tag" href="/tags/{{ tag }}">{{ tag }}</a>
		{% endif %}
		{%- endfor %}
		</div>
		<h1 class="title">{{ title }}</h1>
		<div class="flex flex-row items-center mb-10">
			<svg class="mb-1 ml-2 stroke-gray-600 feather feather-calendar" xmlns="http://www.w3.org/2000/svg"
				width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
				stroke-linecap="round" stroke-linejoin="round">
				<rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
				<line x1="16" y1="2" x2="16" y2="6"></line>
				<line x1="8" y1="2" x2="8" y2="6"></line>
				<line x1="3" y1="10" x2="21" y2="10"></line>
			</svg>
			<time class="text-sm leading-none text-gray-600 md:text-lg" datetime="{{ post.date | dateIso }}">{{
				post.date | dateReadable }}</time>
		</div>
		<hr />
		<div class="content">
			{{content | safe}}
		</div>
</article>
